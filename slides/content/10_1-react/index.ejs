<section>
  <h2>Методи життєвого циклу</h2>

  <section>
    <pre><code class="javascript" data-trim>
class Counter extends Component {
  constructor(props) {
    super(props);
    this.state = { count: props.count };
  }

  componentDidMount() {
    fetch('/count')
      .then((response) =&gt; response.json())
      .then((data) =&gt;
        this.setState(() =&gt; { counter: data.count })
      );
  }

  ...
}
